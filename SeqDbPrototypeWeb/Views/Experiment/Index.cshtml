                <a asp-controller="Home" asp-action="Index"><i class="bi bi-info-circle-fill"></i></a> &nbsp;
                <a asp-controller="Experiment" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a> &nbsp;
