@model IEnumerable<ExperimentViewModel>

@{
    ViewData["Title"] = "Experiments";
}

<h1>Experiments</h1>

<p>
    <a asp-controller="Experiment" asp-action="Create" asp-route-ProjectId="@ViewData["ProjectId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
